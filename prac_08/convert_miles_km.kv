BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Up'
                    on_press: app.handle_increment(input_number.text, 1)
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'Down'
                    on_press: app.handle_increment(input_number.text, -1)
#    BoxLayout:
#        orientation: 'horizontal'
#        Button:
#            text: 'Convert miles to km'
#            on_press: app.handle_calculate(input_number.text)
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: app.message
            id: output_label
            font_size: 48
            color: (1, 1, 0, 1)